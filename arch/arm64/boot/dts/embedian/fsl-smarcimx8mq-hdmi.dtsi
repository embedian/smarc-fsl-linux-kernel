/ {
        sound-hdmi {
        	status = "okay";
	};

        sound-hdmi-arc {
        	status = "okay";
        };
};

&dcss {
	status = "okay";
	disp-dev = "hdmi_disp";
};

&hdmi {
	status = "okay";
};

&gpio1 {
        pinctrl-names = "default";
        pinctrl-0 = <&pinctrl_hdmi>;

        hdmi_on_hog {
                gpio-hog;
                gpios = <1 0>;
                output-low;
                line-name = "hdmi_on";
        };
};
