#include "imx8mq-smarc-lcdif-lvds.dtsi"

/ {
        sound-hdmi {
        	status = "okay";
	};

        sound-hdmi-arc {
        	status = "okay";
        };
};

&dcss {
        status = "okay";

        port@0 {
                dcss_out: endpoint {
                          remote-endpoint = <&hdmi_in>;
                };
        };
};

&hdmi {
        compatible = "cdn,imx8mq-hdmi";
        lane-mapping = <0xe4>;
        status = "okay";
        port@1 {
                hdmi_in: endpoint {
                        remote-endpoint = <&dcss_out>;
                };
        };
};
