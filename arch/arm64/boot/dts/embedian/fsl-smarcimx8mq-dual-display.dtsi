#include "fsl-smarcimx8mq-hdmi.dtsi"

&lcdif {
	status = "okay";

	port@0 {
		lcdif_mipi_dsi: endpoint {
			remote-endpoint = <&mipi_dsi_in>;
		};
	};
};

&mipi_dsi_phy {
	status = "okay";
};

&mipi_dsi {
	status = "okay";
	as_bridge;
	sync-pol = <1>;
	pwr-delay = <10>;
        /delete-property/ no_clk_reset;

	port@1 {
		mipi_dsi_in: endpoint {
			remote-endpoint = <&lcdif_mipi_dsi>;
		};
	};
};

&mipi_dsi_bridge {
	status = "okay";
        /delete-property/ no_clk_reset;
};

&pwm1 {
	status = "okay";
};

&backlight {
	status = "okay";
};

&dsi_lvds_bridge {
	status = "okay";
};
