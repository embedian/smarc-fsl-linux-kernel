#include "imx8mq-smarc-common.dtsi"
#include "imx8mq-smarc-hdmi.dtsi"

/ {
	model = "Embedian SMARC-iMX8MQ Computer on Module DisplayPort";
};

&dcss {
	status = "okay";
	disp-dev = "hdmi_disp";

	port@0 {
		dcss_out: endpoint {
			remote-endpoint = <&hdmi_in>;
		};
	};
};

&hdmi {
	compatible = "cdn,imx8mq-dp";
	lane-mapping = <0xc6>;
	hdcp-config = <0x3>;

	status = "okay";

	port@1 {
		hdmi_in: endpoint {
			remote-endpoint = <&dcss_out>;
		};
	};
};
