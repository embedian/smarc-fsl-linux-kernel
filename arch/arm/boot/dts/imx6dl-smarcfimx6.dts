&ldb {
	lvds-channel@0 {
		crtc = "ipu1-di0";
	};

	lvds-channel@1 {
		crtc = "ipu1-di1";
	};
};

&mxcfb1 {
	status = "okay";
};

&mxcfb2 {
	status = "okay";
};

&pxp {
	status = "okay";
};

&cpu0 {
        arm-supply = <&reg_arm>;
        soc-supply = <&reg_soc>;
};

&gpc {
        /* use ldo-enable, u-boot will check it and configure */
        fsl,ldo-bypass = <0>;
        /* watchdog select of reset source */
        fsl,wdog-reset = <1>;
};

&wdog1 {
        status = "okay";
};

&wdog2 {
        status = "disabled";
};
